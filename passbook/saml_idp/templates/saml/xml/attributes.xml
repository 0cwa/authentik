<saml:AttributeStatement>
    {% for attr in attributes %}
        <saml:Attribute {% if attr.FriendlyName %}FriendlyName="{{ attr.FriendlyName }}" {% endif %}Name="{{ attr.Name }}">
           <saml:AttributeValue>{{ attr.Value }}</saml:AttributeValue>
        </saml:Attribute>
    {% endfor %}
</saml:AttributeStatement>
